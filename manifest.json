{
  "manifest_version": 3,
  "name": "BetterSearch",
  "version": "2.0",
  "description": "Blocks search results based on custom domain and keyword filters",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/128.png"
  },
  "icons": {
    "128": "icons/128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.bing.com/*", "https://*.bing.com/*", "https://bing.com/*"],
      "js": ["content.js"]
    },
    {
      "matches": ["https://www.google.com/search*", "https://google.com/search*"],
      "js": ["content_google.js"]
    }
  ],
  "permissions": [
    "activeTab",
    "storage"
  ]
}